; top-most EditorConfig file
root = true

; Always use unix-style newlines and end files with a newline
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
