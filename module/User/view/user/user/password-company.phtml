<?php
$this->headTitle($this->translate('Change password'));
?>
<!-- Use section and div to position the form/ message in the right place -->
<section class="section">
    <div class="container">
        <!-- Check whether the password is changed successfully -->
        <?php if (isset($success) && $success): ?>
            <!-- Message to display when changed successfully -->
            <?= $this->translate('Password changed successfully') ?>
            <br>
            <?= $this->translate('You are logged out.') ?>
            <?= $this->translate('Click') ?>
            <a href="/user/company" ><?= $this->translate('here') ?></a>
            <?= $this->translate('to go to the login page.') ?>
        <?php else: ?>
            <?php
            // Prepare the form
            $form->prepare();

            $form->setAttribute('action', $this->url('user/default', ['action' => 'passwordCompany']));
            $form->setAttribute('method', 'post');

            $form->setAttribute('role', 'form');
            $form->setAttribute('class', 'form-horizontal');
            ?>

            <!-- Form elements are placed in a div -->
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-7 col-md-offset-2 col-lg-6 col-lg-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <!-- Display form title -->
                            <h3><?= $this->translate('Change password') ?></h3>
                        </div>
                        <div class="panel-body">
                            <?= $this->form()->openTag($form) ?>

                            <!-- Do for all password fields (old, new, verify) -->
                            <?php foreach (['old_password', 'password', 'password_verify'] as $field): ?>
                                <?php
                                // Prepare form element
                                $element = $form->get($field);
                                $element->setAttribute('id', $field);
                                $element->setAttribute('class', 'form-control');
                                ?>
                                <div class="form-group<?= count($element->getMessages()) > 0 ? ' has-error' : '' ?>">
                                    <!-- Label to display -->
                                    <label for="<?= $element->getAttribute('id') ?>"
                                           class="control-label col-sm-5"><?= $element->getLabel() ?></label>
                                    <!-- Form input element -->
                                    <div class="col-sm-7">
                                        <?= $this->formInput($element) ?>
                                        <?= $this->formElementErrors($element, array('class' => 'help-block')); ?>
                                    </div>
                                </div>
                            <?php endforeach; ?>

                            <!-- Submit button -->
                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-7">
                                    <?php
                                    $submit = $form->get('submit');
                                    $submit->setAttribute('class', 'btn btn-primary');
                                    ?>
                                    <?= $this->formRow($submit); ?>
                                </div>
                            </div>

                            <?= $this->form()->closeTag(); ?>
                        </div>
                    </div>
                </div>
            </div>
        <?php endif ?>
    </div>
</section>
