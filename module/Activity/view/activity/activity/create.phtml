            </div>
            <div class="col-md-12">
                <?php
                /* render template for fields */
                $fs = $form->get('fields')->getTemplateElement();
                ob_start();
                echo $this->partial('partial/field-fieldset.phtml', ['fs' => $fs, 'index' => '__index__']);
