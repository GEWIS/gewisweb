                $submit = $form->get('submit');
                $submit->setLabel($this->translate('Create Activity'));
                $submit->setAttribute('class', 'btn btn-primary');
                ?>
                <div class="form-group">
                    <?= $this->formButton($submit) ?>
                </div>
            </div>
            <?= $this->form()->closeTag(); ?>
        </div>
    </div>
</section>

