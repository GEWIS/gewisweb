      $(this).markdown(
        {
          resize: "both",
          iconlibrary: "fa"
        }
      );
    });
    Activity.updateForm();
    for (var i = 0; i < <?= $index ?>; i++) {
        Activity.updateFieldset(i);
    }
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
