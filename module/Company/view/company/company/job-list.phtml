        <script type="text/javascript">
            /* FILTERING */

            function filter_all(term) {
                $(".job-list-item").each(function() {
                    if ($(this).text().toLowerCase().indexOf(term.toLowerCase())==-1) {
                        $(this).css({display: "none"});
                    } else {
                        $(this).css({display: "block"});
                    }
                });
            }

            $("#filter-all").keyup(function() {
